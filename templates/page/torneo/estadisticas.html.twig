<div class="section-content">
    {% for evento in eventos %}
        <div class="d-flex justify-content-between align-items-center" style="margin-top: 2rem;">
            <h3 style="margin: 0; color: #cdc832;">{{ evento.evento }}  {% if app.user == torneo.organizador %}
                <a href="{{ path('eliminar_evento', {'id': evento.id}) }}" class="btn btn-sm btn-danger" >Eliminar Evento</a>
            {% endif %}</h3>
        </div>
        <div class="stats-table-container">
            <table class="stats-table">
                <thead>
                <tr>
                    <th>Jugador</th>
                    <th>Equipo</th>
                    <th style="text-align: center;">Cantidad</th>
                </tr>
                </thead>
                <tbody>
                {% for event in evento.jugadorEventos %}
                    <tr>
                        <td>{{ event.jugador.nombre }}</td>
                        <td>{{ event.jugador.equipo.nombre }}</td>
                        <td style="text-align: center; color: #cdc832;">{{ event.cantidad }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" style="text-align: center;">No hay registros para {{ evento.evento }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>No hay eventos configurados para este torneo.</p>
    {% endfor %}
</div>