{% extends 'base.html.twig' %}
{% block title %} Inicio {% endblock title %}
{% block body %}
   <nav class="navigator-bar">
        <div class="nav-content">
            <div class="logoFC">
                <img src="img/logo.png" alt="FriendlyCup Logo" class="main-logo">
            </div>
            <div class="search-container">
                <input type="text" placeholder="Buscar torneos">
            </div>
            <div class="nav-buttons">
                <a href="{{ path('crear-torneo') }}" class="btn-cta">Crear torneo (CTA)</a>
                <nav id="navLogin">
                    {% if app.user %}
                        <button class="btn-secondary"><a href="{{ path('app_logout') }}">
                            {{ app.user.name }} - Cerrar Sesión
                        </a></button>
                    {% else %}
                        <button class="btn-secondary">
                            <a href="{{ path('app_login') }}">Iniciar Sesión</a>
                        </button>
                        <button class="btn-secondary">
                            <a href="{{ path('app_register') }}">Registrarse</a>
                        </button>
                    {% endif %}
                </nav>
            </div>
        </div>
    </nav>

    <section class="hero-section">
        <div class="hero-content">
            <h1>Crea tu torneo<br>en 2 minutos</h1>
            <a href="#" class="hero-cta">CTA: Nuevo torneo</a>
        </div>
    </section>

    <main class="main-container">
        <section class="section-container">
            <h2>Mis torneos</h2>
            <hr>
            <div class="grid-layout">
                {# Ejemplo de tarjeta #}
                <div class="card">
                    <div class="card-img">Image</div>
                    <div class="card-info">
                        <strong>Nombre Torneo</strong>
                        <p>Fecha / Estado</p>
                    </div>
                </div>
                <div class="card"><div class="card-img">Image</div><div class="card-info"><strong>Nombre Torneo</strong><p>Fecha / Estado</p></div></div>
                <div class="card"><div class="card-img">Image</div><div class="card-info"><strong>Nombre Torneo</strong><p>Fecha / Estado</p></div></div>
            </div>
        </section>

        <div class="lower-sections">
            <section class="section-container">
                <h2>Torneos seguidos</h2>
                <hr>
                <div class="card">
                    <div class="card-img">Image</div>
                    <div class="card-info"><strong>Nombre Torneo</strong><p>Fecha / Estado</p></div>
                </div>
            </section>

            <section class="section-container">
                <h2>Ligas populares / Fantasy</h2>
                <hr>
                <div class="card">
                    <div class="card-img">Image</div>
                    <div class="card-info"><strong>Fútbol Fantasy</strong></div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}