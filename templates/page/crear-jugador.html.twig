{% extends 'base.html.twig' %}
{% block title %}Añadir Jugador{% endblock title %}
{% block body %}
    <div class="crear-jugador">
        <div id="RLCBlock">
            <h2>Añadir Nuevo Jugador</h2>
        </div>
        <div id="RLCForm">
            {{ form_start(formulario, {'attr': {'id': 'formTorneo'}}) }}
            {{ form_widget(formulario) }}
            {{ form_end(formulario) }}
        </div>
        <div class="botones-accion">
            <button type="button" id="cancelar">
                <a href="{{ path('inicio') }}">Cancelar</a>
            </button>
        </div>
    </div>
{% endblock %}