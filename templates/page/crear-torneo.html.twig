{% extends 'base.html.twig' %}
{% block title %}Crear Nuevo Torneo{% endblock title %}

{% block body %}
    <div class="crear-torneo">
        <div id="RLCBlock">
            <h2>Crear Nuevo Torneo</h2>
        </div>
        <div id="RLCForm">
            {{ form_start(formulario, {'attr': {'id': 'formTorneo'}}) }}
            {# Renderiza los campos del formulario #}
            {{ form_widget(formulario) }}
        </div>
        <div class="botones-accion">
            <button type="button" id="cancelar">
                <a href="{{ path('inicio') }}">Cancelar</a>
            </button>
        </div>
        {{ form_end(formulario) }}
    </div>
{% endblock %}

