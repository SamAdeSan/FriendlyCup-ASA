{% extends 'base.html.twig' %}

{% block title %}Detalles del Equipo: {{ equipo.nombre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    {# Encabezado del Equipo #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>{{ equipo.nombre }}</h1>
            <p class="text-muted">
                Torneo: <strong>{{ torneo.name }}</strong> | 
                Puntos actuales: <span class="badge bg-primary text-white">{{ puntos }}</span>
            </p>
        </div>
        <a href="{{ path('inicio') }}" class="btn btn-outline-secondary btn-sm">Volver al inicio</a>
    <hr>
    {# Sección de Jugadores #}
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Plantilla de Jugadores</h3>
            {# Botón que siempre aparece para añadir más #}
            {% if jugadores is not empty %}
                <a href="#" class="btn btn-success btn-sm">+ Añadir Jugador</a>
            {% endif %}
        </div>
        <div class="card-body">
            
            {% if jugadores is empty %}
                {# ESTADO VACÍO: Si no hay jugadores #}
                <div class="text-center py-5">
                    <i class="bi bi-people fs-1 text-muted"></i>
                    <p class="mt-3">Aún no hay jugadores inscritos en este equipo.</p>
                    
                    {# BOTÓN PARA AÑADIR (Debes crear esta ruta en tu controlador) #}
                    <a href="{{ path('crearjugador', {'id': equipo.id}) }}" class="btn btn-primary lg">
                        <i class="bi bi-person-plus-fill"></i> Añadir el primer jugador
                    </a>
                </div>
            {% else %}
                {# LISTADO: Si hay jugadores #}
                <table class="table table-hover mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Posición (opcional)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for jugador in jugadores %}
                            <tr>
                                <td>{{ jugador.id }}</td>
                                <td>{{ jugador.nombre }}</td>S
                                <td>{{ jugador.posicion|default('No definida') }}</td>
                                <td>
                                    <a href="{{path('jugadoreliminado', {'id': jugador.id})}}" class="btn btn-sm btn-danger">Eliminar</a>
                                    <a href="{{path('modificarjugador', {'id': jugador.id})}}" class="btn btn-sm btn-secondary">Modificar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}