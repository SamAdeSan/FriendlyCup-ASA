{% extends 'base.html.twig' %}

{% block title %}Fantasy League - {{ equipo.entrenador.name }}{% endblock %}

{% block body %}
    <div class="fantasy-main">
        <section id="RLCBlock">
            <h1>Equipo {{ equipo.id }} de {{ equipo.entrenador.name }}</h1>
            <p class="budget-text">
                <span id="budget" data-minimo="{{ liga.minimoJugadores }}" data-valor="{{ equipo.presupuesto }}" data-id="{{ equipo.id }}">
                    {{ equipo.presupuesto | number_format }} €
                </span>
            </p>
        </section>

        <div class="main-container-fantasy" style="width: 100%;">
            <div class="torneo-content">
                <h3>Mis jugadores</h3>
                <div class="stats-table-container">
                    <table class="stats-table">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Puntos</th>
                            <th>Valor de mercado</th>
                            <th>Acción</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for jugador in misJugadores %}
                            <tr>
                                <td>{{ jugador.nombre }}</td>
                                <td>{{ jugador.estadisticas }}</td>
                                <td>{{ jugador.valordemercado }} €</td>
                                <td>
                                    <button class="vender"
                                            data-id="{{ jugador.id }}"
                                            data-nombre="{{ jugador.nombre }}"
                                            data-valor="{{ jugador.valordemercado }}"
                                            data-puntos="{{ jugador.estadisticas }}">
                                        Vender
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <h3>Mercado</h3>
                <div class="stats-table-container">
                    <table class="stats-table">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Puntos</th>
                            <th>Valor de mercado</th>
                            <th>Acción</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for jugador in mercado %}
                            <tr>
                                <td>{{ jugador.nombre }}</td>
                                <td>{{ jugador.estadisticas }}</td>
                                <td>{{ jugador.valordemercado }} €</td>
                                <td>
                                    <button class="btn-subir fichar"
                                            data-id="{{ jugador.id }}"
                                            data-valor="{{ jugador.valordemercado }}"
                                            data-nombre="{{ jugador.nombre }}"
                                            data-puntos="{{ jugador.estadisticas }}">
                                        Fichar
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <aside class="sidebar-organizador">
                <h3>En esta liga</h3>
                <div class="stats-table-container">
                    <table class="stats-table">
                        <thead>
                        <tr>
                            <th>Equipo</th>
                            <th>Puntos</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for equipo in equiposEnLiga %}
                            <tr>
                                <td> <a href="{{ path('equipo_fantasy_show', {'id': equipo.id}) }}">{{ equipo.entrenador.name }}</a></td>
                                <td>{{ equipo.puntos }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if app.user == liga.administrador %}
                    <button id="btnAnadirUsuario"
                            class="btn btn-primary"
                            data-clave="{{ liga.clave }}">
                        Ver clave invitación
                    </button>
                {% endif %}
                <button type="button" class="volver"><a href="{{ path('inicio') }}" style="text-decoration: none; color: white">Volver al Menú Principal</a></button>
            </aside>
        </div>
    </div>
    {{ include('modals/_limiteJugadores.html.twig') }}
    {{ include('modals/_verClaveInvitacion.html.twig') }}
{% endblock %}